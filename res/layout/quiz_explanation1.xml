<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android1="http://schemas.android.com/apk/res/android"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background_temp"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:orientation="vertical"
         >

        <TextView
            android:id="@+id/textView1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:text="Trojan SMS Quiz Explanation"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:textStyle="bold" />

        <LinearLayout
            android:id="@+id/explanation1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            >

            <TextView
                android1:id="@+id/textView1"
                android1:layout_width="wrap_content"
                android1:layout_height="wrap_content"
                android1:textSize="12sp"
                android1:text="Question1:\n The answer is: true.1.Trojans SMSs Agents is a major type of  malicious code only affecting mobile devices." />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/explanation2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/textView2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="12sp"
                android:text="Question2:\n The answer is: All of the above. Trojan worms can steal contacts, track location, access banking information." />
        </LinearLayout>

        <LinearLayout
            android1:id="@+id/explanation3"
            android1:layout_width="match_parent"
            android1:layout_height="wrap_content"
            android1:orientation="vertical" >

            <TextView
                android:id="@+id/textView3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="12sp"
                android:text="Question3:\n The answer is: Signed by Apple. An app is more likely to be legitimate non malicious in the AppStore if it were signed by Apple" />
        </LinearLayout>

        <LinearLayout
            android1:id="@+id/explanation4"
            android1:layout_width="match_parent"
            android1:layout_height="wrap_content"
            android1:orientation="vertical" >

            <TextView
                android:id="@+id/textView4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="12sp"
                android:text="Question4:\n The answer is: B and C. A good security measure to protect our mobile devices and keep the mobile operating system updated" />
        </LinearLayout>

        <LinearLayout
            android1:id="@+id/explanation5"
            android1:layout_width="match_parent"
            android1:layout_height="wrap_content"
            android1:orientation="vertical" >

            <TextView
                android:id="@+id/textView5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android1:textSize="12sp"
                android:text="Question5:\n The answer is: Download the attached executable file. Melissa downloaded the attached executable file after receiving the malicious text from Debbie" />
        </LinearLayout>
        
         <LinearLayout
                android:id="@+id/randomlayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"            
                android:orientation="vertical" >

                <TextView
                    android:id="@+id/textview"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />

			</LinearLayout>
        
      <LinearLayout
            android:layout_width="match_parent"
        android:layout_height="0dip"
        android:layout_weight="1"
        android:gravity="right|bottom"
            android:orientation="vertical">
      <Button
        android:id="@+id/next_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="20dp"
        android:layout_marginBottom="20dp"    
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:textColor="#ffffff"
        android:background="@drawable/play_button"
        android:shadowColor="#000000"
        android:onClick="goToStory"
        android:text="@string/next_story" />
        </LinearLayout>
        
    </LinearLayout>

</ScrollView>